<?xml version="1.0" encoding="UTF-8" ?>
<adfc-config xmlns="http://xmlns.oracle.com/adf/controller" version="1.2">
  <task-flow-definition id="bookingTF">
    <default-activity>createBooking</default-activity>
    <transaction>
      <new-transaction/>
    </transaction>
    <input-parameter-definition id="__2">
      <name>numberOfSeats</name>
      <value>#{pageFlowScope.flightBookingBean.numberOfSeats}</value>
      <class>java.lang.Integer</class>
      <required/>
    </input-parameter-definition>
    <managed-bean id="__1">
      <managed-bean-name>flightBookingBean</managed-bean-name>
      <managed-bean-class>com.skyjetairlines.view.bean.FlightBookingBean</managed-bean-class>
      <managed-bean-scope>pageFlow</managed-bean-scope>
    </managed-bean>
    <method-call id="createBooking">
      <method>#{pageFlowScope.flightBookingBean.createBooking}</method>
      <outcome>
        <fixed-outcome>addBookingDetails</fixed-outcome>
      </outcome>
    </method-call>
    <view id="bookingDetails">
      <page>/bookingDetails.jsf</page>
    </view>
    <task-flow-return id="home">
      <outcome>
        <name>home</name>
        <rollback/>
      </outcome>
    </task-flow-return>
    <task-flow-return id="save">
      <outcome>
        <name>home</name>
        <commit/>
      </outcome>
    </task-flow-return>
    <view id="choosePayment">
      <page>/choosePayment.jsf</page>
    </view>
    <view id="summary">
      <page>/summary.jsf</page>
    </view>
    <task-flow-call id="createPaymentTF">
      <task-flow-reference>
        <document>/WEB-INF/createPaymentTF.xml</document>
        <id>createPaymentTF</id>
      </task-flow-reference>
      <run-as-dialog>
        <display-type>
          <inline-popup/>
        </display-type>
      </run-as-dialog>
    </task-flow-call>
    <task-flow-call id="createPassengerTF">
      <task-flow-reference>
        <document>/WEB-INF/createPassengerTF.xml</document>
        <id>createPassengerTF</id>
      </task-flow-reference>
      <run-as-dialog>
        <display-type>
          <inline-popup/>
        </display-type>
      </run-as-dialog>
    </task-flow-call>
    <control-flow-rule id="__3">
      <from-activity-id>createBooking</from-activity-id>
      <control-flow-case id="__4">
        <from-outcome>addBookingDetails</from-outcome>
        <to-activity-id>bookingDetails</to-activity-id>
      </control-flow-case>
    </control-flow-rule>
    <control-flow-rule id="__5">
      <from-activity-id>*</from-activity-id>
      <control-flow-case id="__6">
        <from-outcome>home</from-outcome>
        <to-activity-id>home</to-activity-id>
      </control-flow-case>
    </control-flow-rule>
    <control-flow-rule id="__7">
      <from-activity-id>bookingDetails</from-activity-id>
      <control-flow-case id="__8">
        <from-outcome>choosePaymentOption</from-outcome>
        <to-activity-id>choosePayment</to-activity-id>
      </control-flow-case>
      <control-flow-case id="__13">
        <from-outcome>createPassenger</from-outcome>
        <to-activity-id>createPassengerTF</to-activity-id>
      </control-flow-case>
    </control-flow-rule>
    <control-flow-rule id="__9">
      <from-activity-id>choosePayment</from-activity-id>
      <control-flow-case id="__10">
        <from-outcome>viewSummary</from-outcome>
        <to-activity-id>summary</to-activity-id>
      </control-flow-case>
      <control-flow-case id="__14">
        <from-outcome>createPayment</from-outcome>
        <to-activity-id>createPaymentTF</to-activity-id>
      </control-flow-case>
    </control-flow-rule>
    <control-flow-rule id="__11">
      <from-activity-id>summary</from-activity-id>
      <control-flow-case id="__12">
        <from-outcome>returnToHome</from-outcome>
        <to-activity-id>save</to-activity-id>
      </control-flow-case>
    </control-flow-rule>
  </task-flow-definition>
</adfc-config>
